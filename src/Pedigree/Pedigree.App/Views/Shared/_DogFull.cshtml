@model DogViewModel

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            @Html.SexIcon(Model)
            <dog-name name="@Model.Name" titleId="@Model.TitleId"></dog-name>
        </h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <h4 class="text-center">General</h4>
                <dl class="dl-horizontal">
                    <dt>Registration #</dt>
                    <dd>@Model.RegistrationNumber</dd>
                    <dt>Stud #</dt>
                    <dd>@Model.StudNumber</dd>
                </dl>
            </div>
            <div class="col-md-4">
                <h4 class="text-center">Medical</h4>
                <dl class="dl-horizontal">
                    <dt>CNM</dt>
                    <dd>@Model.CNM</dd>
                    <dt>Eyes</dt>
                    <dd>@Model.EyeCertificate</dd>
                    <dt>Elbows</dt>
                    <dd>@Model.ElbowScore</dd>
                    <dt>Hips</dt>
                    <dd>@Model.HipScore</dd>
                </dl>
            </div>
            <div class="col-md-4">
                <h4 class="text-center">Ownership</h4>
                <dl class="dl-horizontal">
                    <dt>Owner</dt>
                    <dd>@Model.OwnerId</dd>
                    <dt>Breeder</dt>
                    <dd>@Model.PersonId</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
