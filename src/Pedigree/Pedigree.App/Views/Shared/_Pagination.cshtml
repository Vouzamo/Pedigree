@model IPagination

@{
    var from = Math.Max(Model.Page - 2, 1);
    var to = Math.Min(from + 4, Model.TotalPages);
    from = Math.Max(to - 4, 1);
}

<div class="row">
    <div class="col-md-12">
        <div class="btn-toolbar" role="toolbar" aria-label="Pagination">
            <div class="btn-group" role="group" aria-label="Backwards">
                <button type="submit" class="btn btn-default" name="page" value="1" @(Model.HasPrevious ? string.Empty : "disabled")>First</button>
                <button type="submit" class="btn btn-default" name="page" value="@Model.PreviousPage" @(Model.HasPrevious ? string.Empty : "disabled")>Previous</button>
            </div>
            <div class="btn-group" role="group" aria-label="Specific Page">
                @for (int p = from; p <= to; p++)
                {
                    <button type="submit" class="btn btn-default" name="page" value="@p" @(Model.Page != p ? string.Empty : "disabled")>@p</button>
                }
            </div>
            <div class="btn-group" role="group" aria-label="Forwards">
                <button type="submit" class="btn btn-default" name="page" value="@Model.NextPage" @(Model.HasNext ? string.Empty : "disabled")>Next</button>
                <button type="submit" class="btn btn-default" name="page" value="@Model.TotalPages" @(Model.HasNext ? string.Empty : "disabled")>Last</button>
            </div>
        </div>
    </div>
</div>